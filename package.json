{
  "name": "grammuelle",
  "version": "0.0.1",
  "description": "SASS for humans.",
  "main": "theme.css",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "inspect": "less theme.css",
    "watch": "sass watch .",
    "docs": "styledocco --name grammuelle --preprocessor \"scss --load-path=$(which scss)\"",
    "view.docs": "open docs/index.html",
    "inspect.bower": "less bower.json",
    "hotfix": "git add .; git commit -m \"#hotfix: $(date)\"; git push -u origin master",
    "do(__module__)": "echo \"@include Do('module') {}\" >> ./__stylebook__.scss;"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nerdfiles/grammuelle.git"
  },
  "keywords": [
    "sass"
  ],
  "author": "nerdfiles",
  "license": "WTFPL",
  "bugs": {
    "url": "https://github.com/nerdfiles/grammuelle/issues"
  },
  "homepage": "https://github.com/nerdfiles/grammuelle#readme"
}
